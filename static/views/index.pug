      /* enable highlightjs */
      hljs.configure({
        languages: ['haskell']
      });

      setTimeout(function() {
        document.querySelectorAll('.ql-syntax').forEach((block) => {
          hljs.highlightBlock(block);
        });
      }, 1500)
