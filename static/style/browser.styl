.media-browser
  height 100%

.media
  display flex
  flex-wrap wrap
  height 100%

.media-item
  padding 12.5px
  margin-left 12.5px
  margin-bottom 12.5px
  display flex
  justify-content center
  align-items center

.thumbnail
  max-width 200px
  position relative

  .thumbnail-overlay
    position absolute
    opacity 0
    top 0 
    left 0
    width 100%
    height 100%

    display flex
    justify-content center
    align-items center
    
    &:hover 
      background-color rgba(0, 0, 0, 0.7)
      opacity 1

    .thumbnail-remove
      border 1px solid #fff
      padding separator
      color #fff
      display flex
      justify-content center
      align-items center

      &:hover
        background-color #fff
        color #000

  img
    width 100%

.tabs
  display flex
  padding separator

.tab
  display flex
  justify-content center
  align-items center
  background-color #fff
  color #000
  width 150px
  height 30px
  text-align center
  margin-right separator
  border solid 0.5px #000
  transition all 1s

  &:hover
    background-color #000
    color #fff

.upload-container
  position relative
  margin-top 25px

.dropbox
  overflow-y scroll
  position relative
  display flex
  border solid 0.5px #000
  justify-content center
  align-items center
  width 100%
  min-height 300px
  top 0
  margin-bottom 25px

  &:after 
    content: "";
    display: table;
    clear: both;

.uploads
  display flex
  flex-wrap wrap
  position absolute
  top 0
  left 0

.upload-info
  word-wrap break-word

.upload-file
  margin 25px
  max-width 150px

.upload-thumbnail
  width 100%

  img
    width 100%

.upload-action
  margin-top separator

.button
  display flex
  justify-content center
  align-items center
  transition all 1s
  width 150px
  height 30px
  border solid 0.5px #000
  background-color #fff
  color #000

  &:hover
    background-color #000
    color #fff

.selected-true
  background-color rgb(105, 210, 231)

.selected-false
  background-color rgb(255, 255, 255)

