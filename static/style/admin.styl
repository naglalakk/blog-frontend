@import "constants"

.admin-container
  max-width content-width
  margin 0 auto
  display flex

  .admin-menu
    padding-right separator
    padding-top separator
    border-right 1px solid #000

  .content
    width 100%
    height 100%
    padding-top separator
    padding-left separator
    margin-bottom separator

    .top-bar
      display flex
      justify-content space-between

.label
  display block
  margin-bottom 12.5px

.editor
  margin-bottom separator

.text-input
  font-size 16px
  margin-bottom separator
  border 0
  border-bottom 1px solid #000
  outline none

input[type="checkbox"]
  margin-bottom 12.5px

.description
  display block
  font-size 12px
  color rgb(170,179,171)
  margin-bottom 12.5px
